{
    "version": "0.1.0",
    "windows": {
        "command": ".\\node_modules\\.bin\\gulp"
    },
    "linux": {
        "command": "./node_modules/.bin/gulp"
    },
    "osx": {
        "command": "./node_modules/.bin/gulp"
    },
    "isShellCommand": true,
    "args": [
        "--no-color"
    ],
    "tasks": [
        {
            "taskName": "ts",
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "lint",
            "showOutput": "silent",
            "problemMatcher": [
                {
                    "owner": "gulp",
                    "fileLocation": ["absolute"],
                    "pattern": {
                        "regexp": "^\\[\\d\\d:\\d\\d:\\d\\d\\] \\[gulp-tslint\\] (.*) \\(.*\\) (.*)\\[(\\d*), (\\d*)\\]: (.*)$",
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5,
                        "severity": 1
                    }
                }
            ]
        },
        {
            "taskName": "sass",
            "showOutput": "silent",
            "problemMatcher": [
                {
                    "owner": "gulp",
                    "fileLocation": ["relative", "${workspaceRoot}"],
                    "pattern": {
                        "regexp": "^\\[\\d\\d:\\d\\d:\\d\\d\\] \\[sass\\] \\[(.*)\\] (.*):  (\\d+):(\\d+)  (.*)$",
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5,
                        "severity": 1
                    }
                }
            ]
        },
        {
            "taskName": "templates",
            "showOutput": "never"
        },
        {
            "taskName": "emulate-ios",
            "showOutput": "never"
        },
        {
            "taskName": "emulate-ios-remote",
            "showOutput": "never"
        },
        {
            "taskName": "emulate-android",
            "showOutput": "never"
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "showOutput": "silent",
            "problemMatcher": [
                {
                    "owner": "gulp",
                    "fileLocation": ["absolute"],
                    "pattern": [
                        {
                            "regexp": ".*? (FAILED)$"
                        },
                        {
                            "regexp": "\t(.*)$",
                            "message": 1
                        },
                        {
                            "regexp": "at (.*):(\\d*)$",
                            "file": 1,
                            "line": 2
                        }
                    ]
                }
            ]
        }
    ]
}