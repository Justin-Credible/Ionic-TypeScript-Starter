{
    "manifest_version": 2,

    "name": "${APP_NAME}",
    "description": "${APP_DESCRIPTION}",
    "version": "${APP_VERSION}",

    "author": "${AUTHOR_NAME} | ${AUTHOR_EMAIL} | ${AUTHOR_WEBSITE}",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html",
        "default_title": "Sample App"
    },
    "permissions": [
        "https://ajax.googleapis.com/",
        "clipboardWrite"
    ]
}