{
    "compilerOptions": {
        "target": "es5",
        "out": "tests/unit-tests.bundle.js",
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "removeComments": false,
        "noUnusedLocals": true,
        "lib": ["dom", "es5", "es2015.promise"],

        /**
        * http://www.typescriptlang.org/docs/handbook/tsconfig-json.html#types-typeroots-and-types
        * Empty to tell compiler to ignore automatically importing all types from ./node_modules/@types/*
        */
        "types": [],
    },
    "include": [

        // Unit test framework, tests, and type definitions.
        "./**/*.ts",
        "./**/*.d.ts",

        // Type definitions for the compiled app.
        "../www/js/bundle.d.ts",

        // Type definitions used by the app.
        "../src/**/*.d.ts"
    ],
}
